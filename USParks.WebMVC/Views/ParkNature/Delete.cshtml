@model USParks.Models.ParkNature.ParkNatureDetail

@{
    ViewBag.Title = "Remove Nature";
}
<style>
    .style {
        color: snow;
        font-family: 'Comic Sans MS'
    }

    .back {
        color: snow;
        font-size: 15px;
        font-family: 'Comic Sans MS';
        background-color: #617ebc;
        padding: 5px 5px;
        border-radius: 10%;
    }

        .back:hover {
            background-color: #6c8cd1;
            text-decoration: none;
            color: cyan;
        }
</style>
<h2 class="style">Remove Nature From Park</h2>
<h4 class="style">Your About to remove a nature item from the park... Are you sure?</h4>
<div class="style">
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NatureId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NatureId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NatureName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NatureName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Park Details", "Details", "Park", new { id = Model.ParkId }, new { @class = "back" }) |
        </div>
    }
</div>
