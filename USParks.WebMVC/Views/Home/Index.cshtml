@{
    ViewBag.Title = "Main Page";
}
<style>
    .bigstyle {
        color: snow;
        font-family: 'Comic Sans MS';
        font-weight: 700;
    }

    .style {
        color: snow;
        font-family: 'Comic Sans MS';
        padding-left: 70px;
    }

    .tile {
        display: flex;
        flex-flow: row wrap;
        margin-left: 30px;
    }

    .tile-halves {
        background-color: #313e59;
        font-family: 'Comic Sans MS';
        color: snow;
        width: 282px;
        height: 270px;
        margin-right: .9em;
        margin-bottom: .9em;
        border-radius: 5%;
        text-align: center;
        border: 1px solid #cabe9b
    }

    .tile-image {
        transition: .4s ease-out;
        align-content: center;
        border-radius: 5%;
    }

        .tile-image:hover {
            transform: scale(1.02);
        }

    .popular {
        display: flex;
        flex-flow: column wrap;
        
    }

    .popular-halves {
        display: flex;
        flex-flow: row wrap;
        border: 1px solid #cabe9b;
        background-color: #313e59;
    }

    .popular-top {
        width: 100%;
        padding: 1.3rem 1.5rem 0.6rem;
        
    }

    .popular-pages {
        display: block;
        
    }

        .popular-pages h2 {
            font-size: 1.4em;
            font-weight: bold;
            color: snow;
            font-family: 'Comic Sans MS';
        }

        .popular-pages ul {
            display: flex;
            margin: 1em 0 0.7em;
            width: 100%;
            flex-flow: row wrap;
        }

    .popular-pages-items {
        display: flex;
        align-items: center;
        list-style: none;
        transition: 0.2s;
        margin-left: 30px;
        margin-right: 30px;
       
        
        
    }


    .popularitems {
        color: snow;
        font-size: 16px;
        font-family: 'Comic Sans MS';
        background-color: #617ebc;
        padding: 12px 16px;
        margin-right: 2em;
        margin-bottom: 2em;
        width: 120px;
        height: 60px;
    }

        .popularitems:hover {
            background-color: #6c8cd1;
            text-decoration: none;
            color: cyan;
        }

    .empty {
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
    }
</style>
<div>
    <h1 class="bigstyle">Welcome to US Parks!</h1>
    <h3 class="style">This website is for seeing various parks, attractions and nature found throughout the United States.  Feel free to add and edit your own parts to them!</h3>
</div>



<div class="tile">
    <div class="tile-halves">
        <h2>Parks</h2>
        <div class="tile-image">
            <a href="~/Park/Index">
                <img src="~/Content/Images/USParksFrontPage.jpg" width="260" height="200" class="tile-image" />
            </a>
        </div>

    </div>

    <div class="tile-halves">
        <h2>Attractions</h2>
        <div class="tile-image">
            <a href="~/Attraction/Index">
                <img src="~/Content/Images/AttractionsFrontPage.jpg" width="260" height="200" class="tile-image" />
            </a>
        </div>

    </div>

    <div class="tile-halves">
        <h2>Nature</h2>
        <div class="tile-image">
            <a href="~/Nature/Index">
                <img src="~/Content/Images/NatureFrontPage.jpg" width="260" height="200" class="tile-image" />
            </a>
        </div>
    </div>
</div>

<div class="popular">
    <div class="popular-halves">
        <div class="popular-top">
            <div class="popular-pages">
                <h2>
                    <span>Popular pages</span>
                </h2>
                <p class="empty"> </p>
                <ul>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Yellowstone", "Details/1", "Park", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Isle Royal", "Details/6", "Park", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Yosemite", "Details/7", "Park", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Old Faithful", "Details/1", "Attraction", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Mather Point", "Details/2", "Attraction", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("El Capitan", "Details/7", "Attraction", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Scoville Point", "Details/6", "Attraction", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Black Bear", "Details/1", "Nature", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Douglas-fir", "Details/3", "Nature", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Manatee", "Details/5", "Nature", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Moose", "Details/8", "Nature", new { area = "" }, new { @class = "popularitems" })
                    </li>
                    <li class="popular-pages-items">

                        @Html.ActionLink("Wolf", "Details/10", "Nature", new { area = "" }, new { @class = "popularitems" })
                    </li>
                </ul>
                <p class="empty"></p>
            </div>
        </div>
    </div>
</div>


