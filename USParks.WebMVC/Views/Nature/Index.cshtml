@model IEnumerable<USParks.Models.Nature.NatureListItem>

@{
    ViewBag.Title = "Nature Index";
}
<style>
    .parkstyle {
        color: snow;
        font-family: 'Comic Sans MS';
        font-size: 13px;
    }

    .parkstyleh2 {
        color: snow;
        font-family: 'Comic Sans MS';
        text-align: center;
    }


    .parkbuttons {
        color: snow;
        font-size: 15px;
        font-family: 'Comic Sans MS';
        background-color: #617ebc;
        padding: 5px 5px;
        border-radius: 10%;
    }

        .parkbuttons:hover {
            background-color: #6c8cd1;
            text-decoration: none;
            color: cyan;
        }
</style>
<h1 class="parkstyleh2">List of Nature</h1>

<p>
    @Html.ActionLink("Add nature item", "Create", new { area = "" }, new { @class = "parkbuttons" })
</p>
@if (TempData.ContainsKey("NatureError"))
{
    <div class="alert alert-warning fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["NatureError"]
    </div>
}

@if (TempData.ContainsKey("NatureSaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["NatureSaveResult"]
    </div>
}
<div class="parkstyle">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NatureId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kingdom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NatureId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kingdom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class)
                </td>
                <td>
                    <img src="/Nature/RetrieveImage/@item.NatureId" alt="" height=100 width=200 />
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.NatureId }, new { @class = "parkbuttons" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.NatureId }, new { @class = "parkbuttons" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.NatureId }, new { @class = "parkbuttons" })
                </td>
            </tr>
        }
    </table>
</div>
